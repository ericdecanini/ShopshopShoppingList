<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToolbarText" parent="BoldStylish">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/toolbar_text_size</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AutosizingToolbarText" parent="ToolbarText">
        <item name="android:autoSizeMaxTextSize">@dimen/toolbar_text_size</item>
        <item name="android:autoSizeMinTextSize">1sp</item>
        <item name="android:autoSizeTextType">uniform</item>
    </style>

    <style name="ShoppingListTitleText" parent="Bold">
        <item name="android:textColor">@color/shoppingListTitleColor</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TinyText" parent="Regular">
        <item name="android:textSize">0sp</item>
    </style>

    <style name="ShoppingListPreviewText" parent="Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ShoppingListPreviewEllipsisText" parent="Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="SplashText" parent="Medium">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ListFragmentItemText" parent="Regular">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ListFragmentQuantityText" parent="Medium">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DialogTitleText" parent="Bold">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DialogBodyText" parent="Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/defaultTextColor</item>
    </style>

    <style name="DialogButton" parent="Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dialogButtonTextColor</item>
        <item name="android:background">@color/dialogButtonBackgroundColor</item>
    </style>

    <style name="ButtonPrimary">
        <item name="android:textColor">@color/colorOnSecondary</item>
        <item name="android:backgroundTint">@color/colorSecondary</item>
    </style>

    <style name="EditTextPrimary">
        <item name="android:background">@drawable/bg_edit_new_item</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="ClearCheckedButton" parent="Bold">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_ripple_primary_bg</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">true</item>
    </style>
    
    <style name="UpsellTitleText" parent="BoldStylish">
        <item name="android:textColor">@color/amber_A700</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="UpsellPriceText" parent="BoldStylish">
        <item name="android:textColor">@color/defaultTextColor</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="UpsellBodyText" parent="Medium">
        <item name="android:textColor">@color/defaultTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="UpsellButton" parent="ButtonPrimary">
        <item name="android:textColor">@color/colorOnSecondary</item>
        <item name="android:backgroundTint">@color/colorSecondaryDark</item>
    </style>

    <style name="UpsellButtonSecondary" parent="ButtonPrimary">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_ripple_accent</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="UpsellImageBoxTitleText" parent="BoldStylish">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="UpsellImageBoxDescriptionText" parent="Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert" />

</resources>
