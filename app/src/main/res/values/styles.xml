<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToolbarText" parent="BoldStylish">
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">@dimen/toolbarTextSize</item>
    </style>

    <style name="ShoppingListTitleText" parent="Medium">
        <item name="android:textColor">@color/ShoppingListTitleColor</item>
        <item name="android:textSize">@dimen/shoppingListTitleSize</item>
    </style>

    <style name="ShoppingListPreviewText" parent="Regular">
        <item name="android:textSize">14sp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ShoppingListPreviewEllipsisText" parent="Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ListFragmentItemText" parent="Regular">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ListFragmentQuantityText" parent="Medium">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DialogTitleText" parent="Bold">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DialogBodyText" parent="Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/defaultTextColor</item>
    </style>

    <style name="DialogButton" parent="Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="ButtonPrimary">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/colorSecondary</item>
    </style>

    <style name="EditTextPrimary">
        <item name="android:background">@drawable/bg_edit_new_item</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

</resources>
