<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget" />

    <style name="Widget.App" />

    <style name="Widget.App.Toolbar" parent="Widget.Material3.Toolbar">
<!--        <item name="titleTextAppearance">@style/TextAppearance.App.TitleLarge</item>-->
    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button" />

    <style name="Widget.App.Button.Tonal" parent="Widget.Material3.Button.TonalButton" />

    <style name="Widget.App.Button.TextButton" parent="Widget.Material3.Button.TextButton" />

    <style name="Widget.App.Button.TextButton.Dialog" parent="Widget.Material3.Button.TextButton.Dialog" />

    <style name="Widget.App.Button.TextButton.Accent">
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Widget.App.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColorHint">@color/colorEditTextHint</item>
        <item name="android:letterSpacing">0.005</item>
        <item name="android:textAppearance">@style/TextAppearance.App.BodyLarge</item>
    </style>

    <style name="Widget.App.EditTextLayout">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
    </style>

    <style name="Widget.App.EditTextLayout.Header">
        <item name="android:background">@drawable/bg_edit_header</item>
    </style>

    <style name="Widget.App.EditTextLayout.Dialog">
        <item name="android:background">@drawable/bg_edit_dialog</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="Theme.App.Dialog" parent="ThemeOverlay.Material3.MaterialAlertDialog.Centered" />

    <style name="Widget.App.CardView.Filled" parent="Widget.Material3.CardView.Filled" />

    <style name="Widget.App.CardView.Elevated" parent="Widget.Material3.CardView.Elevated">
        <item name="cardElevation">5dp</item>
    </style>

</resources>
