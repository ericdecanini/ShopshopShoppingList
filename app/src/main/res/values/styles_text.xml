<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.App.Toolbar" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AutosizingToolbarText" parent="TextAppearance.App.Toolbar">
        <item name="android:autoSizeMaxTextSize">@dimen/toolbar_text_size</item>
        <item name="android:autoSizeMinTextSize">1sp</item>
        <item name="android:autoSizeTextType">uniform</item>
    </style>

    <style name="TextAppearance.App.Dialog.Title" parent="TextAppearance.App.TitleMedium">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.App.Dialog.Body" parent="TextAppearance.App.BodyLarge" />

    <style name="NonexistentText">
        <item name="android:textSize">0sp</item>
    </style>

</resources>